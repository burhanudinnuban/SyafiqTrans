<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cvToolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp"
                app:cardElevation="5dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorGeneralSoft">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Our Contact ---> WA/CALL 082118992254 "
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="Pesan Bus Travel"
                android:textColor="@color/colorGeneralSoft"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNamaUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Mudah, cepat, tepat."
                android:textColor="@color/colorGeneralSoft"
                android:textStyle="bold" />


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:text="Dari :"
                        android:textColor="@color/colorGeneralSoft"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/etDari"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/border_edit_text"
                        android:drawableLeft="@drawable/ic_place_green_24dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="Pool SQTrans"
                        android:textAlignment="center"
                        android:textColor="@color/colorGeneralDark" />


                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:background="@drawable/ic_swap_horiz_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:text="Destinasi :"
                        android:textColor="@color/colorGeneralSoft"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/etDestinasi"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/border_edit_text"
                        android:drawableLeft="@drawable/ic_place_green_24dp"
                        android:gravity="center"
                        android:hint="Dufan"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/colorGeneralSoft" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="5dp"
                        android:text="Pergi :"
                        android:textColor="@color/colorGeneralSoft"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/etPergi"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/border_edit_text"
                        android:drawableLeft="@drawable/ic_date_range_green_24dp"
                        android:gravity="center"
                        android:hint="Tanggal"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textColor="@color/colorGeneralSoft" />
                </LinearLayout>

            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilih tipe dan jumlah bus."
                    android:textColor="@color/colorGeneralSoft"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="10dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="9dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Big Bus (69 Seat)"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColor="@color/colorGeneralDark"/>

                        <ImageButton
                            android:id="@+id/imgBigBusView"
                            android:layout_weight="2.5"
                            android:layout_height="30dp"
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_search_orange_24dp"
                            android:background="#fff"
                            android:layout_gravity="center"
                            android:layout_marginRight="15dp"/>

                        <LinearLayout
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/btnMinBigBus"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="-"
                                android:layout_gravity="center"
                                android:background="#E53935"
                                android:textColor="#fff"/>
                            <TextView
                                android:id="@+id/tvBigbus"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:text="0"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:background="@drawable/border_edit_text"
                                android:layout_gravity="center"/>
                            <Button
                                android:id="@+id/btnPlusBigBus"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="+"
                                android:layout_gravity="center"
                                android:background="@color/colorGeneralSoft"
                                android:textColor="#fff"/>

                        </LinearLayout>
                    </TableRow>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="9dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Medium Bus (29 Seat)"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColor="@color/colorGeneralDark"/>

                        <ImageButton
                            android:id="@+id/imgMediumBus"
                            android:layout_weight="2.5"
                            android:layout_height="30dp"
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_search_orange_24dp"
                            android:background="#fff"
                            android:layout_gravity="center"
                            android:layout_marginRight="15dp"/>
                        <LinearLayout
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/btnMinMediumBus"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="-"
                                android:layout_gravity="center"
                                android:background="#E53935"
                                android:textColor="#fff"/>
                            <TextView
                                android:id="@+id/tvMediumBus"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:text="0"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:background="@drawable/border_edit_text"
                                android:layout_gravity="center"/>
                            <Button
                                android:id="@+id/btnPlusMediumBus"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="+"
                                android:layout_gravity="center"
                                android:background="@color/colorGeneralSoft"
                                android:textColor="#fff"/>

                        </LinearLayout>
                    </TableRow>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="9dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mini Bus (19 Seat)"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColor="@color/colorGeneralDark"/>

                        <ImageButton
                            android:id="@+id/imgMiniBus"
                            android:layout_weight="2.5"
                            android:layout_height="30dp"
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_search_orange_24dp"
                            android:background="#fff"
                            android:layout_gravity="center"
                            android:layout_marginRight="15dp"/>
                        <LinearLayout
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/btnMinMiniBus"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="-"
                                android:layout_gravity="center"
                                android:background="#E53935"
                                android:textColor="#fff"/>
                            <TextView
                                android:id="@+id/tvMiniBus"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:text="0"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:background="@drawable/border_edit_text"
                                android:layout_gravity="center"/>
                            <Button
                                android:id="@+id/btnPlusMiniBus"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="+"
                                android:layout_gravity="center"
                                android:background="@color/colorGeneralSoft"
                                android:textColor="#fff"/>

                        </LinearLayout>
                    </TableRow>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    app:cardCornerRadius="9dp">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_weight="1.2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HiAce (16 Seat)"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textColor="@color/colorGeneralDark"/>
                        <ImageButton
                            android:id="@+id/imgHiAce"
                            android:layout_weight="2.5"
                            android:layout_height="30dp"
                            android:layout_width="match_parent"
                            android:src="@drawable/ic_search_orange_24dp"
                            android:background="#fff"
                            android:layout_gravity="center"
                            android:layout_marginRight="15dp"/>
                        <LinearLayout
                            android:layout_weight="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/btnMinHiace"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="-"
                                android:layout_gravity="center"
                                android:background="#E53935"
                                android:textColor="#fff"/>
                            <TextView
                                android:id="@+id/tvHiace"
                                android:layout_width="35dp"
                                android:layout_height="25dp"
                                android:text="0"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:background="@drawable/border_edit_text"
                                android:layout_gravity="center"/>
                            <Button
                                android:id="@+id/btnPlusHiace"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:text="+"
                                android:layout_gravity="center"
                                android:background="@color/colorGeneralSoft"
                                android:textColor="#fff"/>

                        </LinearLayout>
                    </TableRow>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                android:text="Menginap :"
                android:textColor="@color/colorGeneralSoft"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/sLamaMenginap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:entries="@array/Menginap"
                android:layout_marginBottom="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <Button
                    android:id="@+id/btnHarga"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_border_positive"
                    android:text="Lihat Harga" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="*Pemesanan sudah termasuk pulang pergi." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="*Pemberangkatan hanya bisa dari PO.SyafiqTrans untuk saat ini." />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>