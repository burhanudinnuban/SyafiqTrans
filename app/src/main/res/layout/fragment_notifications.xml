<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:layout_marginBottom="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvJudul"
            android:layout_below="@+id/cvToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pengaturan Akun"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/colorGeneralSoft"
            android:gravity="center"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/colorGeneralSoft"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/tvEmailUser"/>

        <Button
            android:id="@+id/btnGantiPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/button_general"
            android:text="Ganti Password"
            android:textColor="#fff"/>
        <Button
            android:id="@+id/btnGantiEmail"
            android:layout_below="@+id/btnGantiPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/button_general"
            android:text="Ganti Email"
            android:textColor="#fff"/>
        <Button
            android:id="@+id/btnLogout"
            android:layout_below="@+id/btnGantiEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/button_border_negative"
            android:text="Keluar"
            android:textColor="#fff"/>
        <Button
            android:id="@+id/btnHapusUser"
            android:layout_below="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@drawable/button_border_negative"
            android:text="Hapus Akun"
            android:textColor="#fff"/>

        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </LinearLayout>


</RelativeLayout>