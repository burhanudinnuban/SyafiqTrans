<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="7dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardElevation="6dp">

                    <TextView
                        android:id="@+id/tvDufan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="Dunia Fantasi Ancol"
                        android:textColor="#6200EA"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardElevation="6dp">

                    <TextView
                        android:id="@+id/tvCiwidey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="Ciwidey"
                        android:textColor="#6200EA"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardElevation="6dp">

                    <TextView
                        android:id="@+id/tvCibodas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="Cibodas"
                        android:textColor="#6200EA"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardElevation="6dp">

                    <TextView
                        android:id="@+id/tvCipanas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="Cipanas"
                        android:textColor="#6200EA"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardElevation="6dp">

                    <TextView
                        android:id="@+id/tvTangkubanPerahu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="Tangkuban Perahu"
                        android:textColor="#6200EA"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardElevation="6dp">

                    <TextView
                        android:id="@+id/tvTMII"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="Taman Mini Indonesia Indah"
                        android:textColor="#6200EA"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardElevation="6dp">

                    <TextView
                        android:id="@+id/tvBali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="Bali"
                        android:textColor="#6200EA"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardElevation="6dp">

                    <TextView
                        android:id="@+id/tvSukabumi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="Sukabumi"
                        android:textColor="#6200EA"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardElevation="6dp">

                    <TextView
                        android:id="@+id/tvBanten"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="Banten"
                        android:textColor="#6200EA"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardElevation="6dp">

                    <TextView
                        android:id="@+id/tvBandung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="Bandung"
                        android:textColor="#6200EA"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardElevation="6dp">

                    <TextView
                        android:id="@+id/tvPuncakBogor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="Puncak Bogor"
                        android:textColor="#6200EA"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardElevation="6dp">

                    <TextView
                        android:id="@+id/tvJakarta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="Jakarta"
                        android:textColor="#6200EA"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardElevation="6dp">

                    <TextView
                        android:id="@+id/tvBogor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="Bogor"
                        android:textColor="#6200EA"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    app:cardElevation="6dp">

                    <TextView
                        android:id="@+id/tvMalang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginBottom="2dp"
                        android:gravity="center"
                        android:text="Malang"
                        android:textColor="#6200EA"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnBatal"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="#D50000"
        android:text="Batal"
        android:textColor="#ffffff"
        android:textStyle="bold" />
</LinearLayout>
